{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "allowUnreachableCode": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "outDir": "./dist/",
    "inlineSourceMap": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@common/*": [
        "../common/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}